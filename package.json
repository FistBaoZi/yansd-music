{
  "name": "music-downloader",
  "version": "1.0.0",
  "description": "Download music and lyrics from music API",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "pkg . --out-path dist",
    "build-win": "pkg . --targets node18-win-x64 --out-path dist",
    "build-release": "pkg . --targets node18-win-x64 --out-path release --compress Brotli"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.21.2"
  },
  "pkg": {
    "assets": [
      "public/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "release"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
